<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nodes.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout>
        <HorizontalStackLayout Spacing="18">
            <Image Source="dotnet_bot.png"
                   SemanticProperties.Description="The dot ner bot waving hello"
                   HeightRequest="64"/>
            <Label FontSize="22" FontAttributes="Bold" Text="Nodes" VerticalOptions="End"/>
            <Label FontSize="22" Text="v1.0" VerticalOptions="End"/>
        </HorizontalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Learn More..." Clicked="LearnMore_Clicked"/>
    </VerticalStackLayout>
</ContentPage>